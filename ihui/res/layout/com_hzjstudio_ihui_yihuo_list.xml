<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/transparent" >

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="15dp"
            android:contentDescription="@null"
            android:src="@drawable/me_head_bg" />

        <com.hzjstudio.ihui.utils.CircularImage
            android:id="@+id/me_portrait"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/me_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/me_portrait"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/imageView5"
            android:text="@string/mingzi_name"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/me_portrait"
            android:layout_alignLeft="@+id/me_name"
            android:text="@string/_¥"
            android:textColor="#ff5501"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/me_jiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/textView1"
            android:text="@string/_88_0"
            android:textColor="#fc5600"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/me_shijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/me_name"
            android:layout_marginRight="12dp"
            android:text="时间"
            android:textColor="#333333"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/transparent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/me_biaoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:text="@string/_biaoti"
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/transparent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/me_im1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp" />

        <ImageView
            android:id="@+id/me_im2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="15dp" />

        <ImageView
            android:id="@+id/me_im3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/transparent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/me_neirong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="详细内容......"
                android:textColor="#333333"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/me_xiangqing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:text="@string/_xiangqing"
                android:textColor="#4fc0f5"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/transparent" />

</LinearLayout>