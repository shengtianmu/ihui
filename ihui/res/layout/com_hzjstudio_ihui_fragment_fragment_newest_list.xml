<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_newest"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_newest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:text="迷你小音箱"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp" >

            <TextView
                android:id="@+id/textView_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总需:" />

            <TextView
                android:id="@+id/tv_newest_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView_total"
                android:text="298" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tv_newest_total"
                android:text="次" />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/pb_newest"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:max="100"
            android:progress="40"
            android:progressDrawable="@drawable/progressbar_item" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView_residue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余:" />

            <TextView
                android:id="@+id/tv_newest_residue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="#f35f65"
                android:layout_toRightOf="@+id/textView_residue"
                android:text="2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tv_newest_residue"
                android:text="次" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>